<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.control.NetworkConfigurationActivity" >
    <LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal" >
     <TextView
        android:id="@+id/IPInView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="输入IP  "
        android:textColor="#000000"
        android:textSize="20dp" >
    </TextView>

    <EditText
        android:id="@+id/IPInEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@+string/IPInDefault"
        android:digits="1234567890."
        android:textSize="20sp" >
    </EditText>
</LinearLayout>
<LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/portInView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="输入端口"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/portInEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+integer/portInDefault"
        android:digits="1234567890"
        android:textSize="20sp" >
    </EditText>
	</LinearLayout>
	
	<LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal" >
     <TextView
        android:id="@+id/IPOutView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="输出IP  "
        android:textColor="#000000"
        android:textSize="20dp" >
    </TextView>

    <EditText
        android:id="@+id/IPOutEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@+string/IPOutDefault"
        android:digits="1234567890."
        android:textSize="20sp" >
    </EditText>
</LinearLayout>
<LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/portOutView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="输出端口"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/portOutEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+integer/portOutDefault"
        android:digits="1234567890"
        android:textSize="20sp" >
    </EditText>
	</LinearLayout>
	
	<LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal" >
     <TextView
        android:id="@+id/IPVideoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="视频IP  "
        android:textColor="#000000"
        android:textSize="20dp" >
    </TextView>

    <EditText
        android:id="@+id/IPVideoEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@+string/IPVideoDefault"
        android:digits="1234567890."
        android:textSize="20sp" >
    </EditText>
</LinearLayout>
<LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal" >
    <TextView
        android:id="@+id/portVideoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="视频端口"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/portVideoEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+integer/portVideoDefault"
        android:digits="1234567890"
        android:textSize="20sp" >
    </EditText>
	</LinearLayout>
	<LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal" >
    <Button
        android:id="@+id/clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        android:layout_marginRight="5dp"
        android:text="清空" >

    </Button>

    <Button
        android:id="@+id/save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        android:layout_marginLeft="5dp"
        android:text="保存" >
    </Button>
    </LinearLayout>
</LinearLayout>
